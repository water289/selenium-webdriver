pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Setup Python') {
      steps {
        sh '''
          python3 -m venv .venv
          . .venv/bin/activate
          python -m pip install --upgrade pip
          pip install -r requirements.txt
        '''
      }
    }
    stage('Run Test') {
      steps {
        sh '''
          . .venv/bin/activate
          python3 TestScriptMay092025.py
        '''
      }
    }
  }
  post {
    always {
      sh 'deactivate || true'
    }
  }
}
